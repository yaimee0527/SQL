#create table with columns
Create table celebs (id integer, name text, age number)
#create table table_name(column_name data type,â€¦)

#insert rows
insert into celebs(id,name,age) values(1,'justin bieber',21);
#view the table or columns
select* from celebs;

#edit a row
update celebs
Set age =22
Where id=1;
#set indicates the column to edit and where indicates the row to edit

#add a new column
alter table celebs 
add column twitter_handle text;

#delete rows
delete from celebs
where twitter_handle is null;

#select distinct
Select distinct genre
from movies;
# return unique values in the result set

#select where like
select * from movies
where name like 'se_en';
# != is 'not equal' and se_en means the spelling may different

select * from movies 
where name like '%man%';
# unlike_ % matches zero or more missing letters in the pattern
#like is not case sensitive

#select where between
select * from moviews
where name between 'A' and 'J';
#data type is text so be careful about case

# AND & OR
select * from movies
where year between 
1990 and 2000
and genre = 'comedy';

select * from movies
where genre = 'comedy'
or year <1980;

#ORDER BY
select *from movies
order by imdb_rating
desc;

#LIMIT
select * from movies
order by imdb_dating
asc
limit 3;














